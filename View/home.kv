#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<HomeScreen>
	MDBoxLayout:
		orientation: "vertical"
		MDBottomAppBar:
			md_bg_color: get_color_from_hex('008080')

			MDToolbar:
				title: "OUTILS"
				elevation: 5
				icon: "github"
				icon_color: get_color_from_hex('008080')
				left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
				right_action_items: [["information-variant", lambda x: root.show_help(x)]]
				on_action_button:	root.view_repos()
				type: "bottom"
				mode: "center"

	MDNavigationLayout:
		ScreenManager:
			MDScreen:
				name: "user_github_pic"
			

		MDNavigationDrawer:
			id: nav_drawer
            ContentNavigationDrawer:
            	nav_drawer: nav_drawer



<ContentNavigationDrawer>:
	orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "center"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/img/LOGO.png"

    MDLabel:
        text: "iTeam-$ Development"
        font_style: "Button"
        font_size: "15sp"
        size_hint_y: None
        halign: 'center'
        height: self.texture_size[1]

    MDLabel:
        text: "contact@iteam-s.xyz"
        font_size: "15sp"
        size_hint_y: None
        height: self.texture_size[1]
        halign: 'center'

    MDSeparator:
    	height: 3


    ScrollView:
        MDList:
            OneLineIconListItem:
                text: "Chargement des images de profils"
                font_size: "14sp"
                on_press:
                    root.nav_drawer.set_state("close")
                ImageLeftWidget:
                    source: "data/img/github.png"

            OneLineIconListItem:
                text: "Automatisation des deploiements"
                on_press:
                    root.nav_drawer.set_state("close")
                ImageLeftWidget:
                    source: "data/img/ubuntu.png"
            
            OneLineIconListItem:
                text: "Gestion de portfolio"
                on_press:
                    root.nav_drawer.set_state("close")
                ImageLeftWidget:
                    source: "data/img/portfolio.png"


